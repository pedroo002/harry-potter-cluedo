<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dialogHpLossViewModel"
            type="neptun.jxy1vz.cluedo.ui.dialog.loss_dialog.hp_loss.HpLossViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLabelHpLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/hp_loss_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvLabelHpLoss"
            android:id="@+id/tvHpLoss"
            android:text="@{dialogHpLossViewModel.loss}"/>

        <TextView
            android:id="@+id/tvLabelRemainingHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remaining_hp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelHpLoss" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/tvLabelRemainingHp"
            app:layout_constraintTop_toBottomOf="@id/tvHpLoss"
            android:id="@+id/tvRemainingHp"
            android:text="@{dialogHpLossViewModel.hp}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>