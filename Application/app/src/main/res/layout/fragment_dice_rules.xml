<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diceRulesRoot">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:text="@string/dice_rules"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/dice_rules_description1"
            android:id="@+id/tvDescription1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ivIllustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription1"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/dice_rules_description2"
            android:id="@+id/tvDescription2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivIllustration"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivGryffindor"
            app:layout_constraintWidth_percent="0.167"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivRavenclaw"
            app:layout_constraintWidth_percent="0.167"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@id/ivGryffindor"
            app:layout_constraintTop_toBottomOf="@id/tvDescription2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivHufflepuff"
            app:layout_constraintWidth_percent="0.167"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@id/ivRavenclaw"
            app:layout_constraintTop_toBottomOf="@id/tvDescription2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivSlytherin"
            app:layout_constraintWidth_percent="0.167"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@id/ivHufflepuff"
            app:layout_constraintTop_toBottomOf="@id/tvDescription2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivHelper"
            app:layout_constraintWidth_percent="0.167"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@id/ivSlytherin"
            app:layout_constraintTop_toBottomOf="@id/tvDescription2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivDarkMark"
            app:layout_constraintWidth_percent="0.167"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toEndOf="@id/ivHelper"
            app:layout_constraintTop_toBottomOf="@id/tvDescription2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/dice_rules_description3"
            android:id="@+id/tvDescription3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivGryffindor"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ivStep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/dice_rules_description4"
            android:id="@+id/tvDescription4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivStep"
            android:layout_margin="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>