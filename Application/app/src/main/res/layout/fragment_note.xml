<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/semi_transparent_background">

    <data>
        <variable
            name="noteViewModel"
            type="neptun.jxy1vz.cluedo.ui.fragment.note.NoteViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ScrollView
            android:id="@+id/svNotepad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:layout_weight="85">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/noteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivNotepad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:longClickable="true"
                    android:src="@drawable/notepad"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Guidelines... -->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineColumn0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4805" />

                <!-- Columns -->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineColumn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.56494" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineColumn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65244" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineColumn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.74" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineColumn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.83" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineColumn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.917" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="1" />

                <!-- Rows -->

                <!-- Suspects -->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineSuspectsTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.04362" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.081" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.119" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.15697" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.19475261" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.232" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineSuspectsBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.27" />

                <!-- Tools -->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineToolsTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.307" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.351" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.3889" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.427" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.46547" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5026" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.541" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineToolsBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.578" />

                <!-- Venues -->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineVenuesTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.616" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.659" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.697" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.735" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.77347" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.8115" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.849" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.88647" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.9246" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRow21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.962" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineVenuesBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:id="@+id/btnSubmit"
            android:layout_weight="15"
            android:text="@string/ok"
            android:onClick="@{()->noteViewModel.close()}"/>

    </LinearLayout>
</layout>