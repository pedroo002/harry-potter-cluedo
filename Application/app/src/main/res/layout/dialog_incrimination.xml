<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dialogViewModel"
            type="neptun.jxy1vz.cluedo.ui.dialog.incrimination.IncriminationViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tvLabelTool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/tool"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelTool"
                app:layout_constraintBottom_toTopOf="@+id/tvLabelSuspect"
                android:id="@+id/svTool">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutToolImages">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivToolAltatoital"
                        android:src="@drawable/tool_altatoital_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectTool(0)}" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivToolMandragora"
                        android:src="@drawable/tool_mandragora_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivToolAltatoital"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectTool(1)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivToolObstructo"
                        android:src="@drawable/tool_obstructo_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivToolMandragora"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectTool(2)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivToolPetrificusTotalus"
                        android:src="@drawable/tool_petrificus_totalus_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivToolObstructo"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectTool(3)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivToolVoltNincs"
                        android:src="@drawable/tool_volt_nincs_szekreny_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivToolPetrificusTotalus"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectTool(4)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivToolZsupszkulcs"
                        android:src="@drawable/tool_zsupszkulcs_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivToolVoltNincs"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectTool(5)}"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvLabelSuspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/suspect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/svTool" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelSuspect"
                android:id="@+id/svSuspect">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutSuspectImages">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivSuspectBellatrix"
                        android:src="@drawable/suspect_bellatrix_lestrange_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectSuspect(0)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivSuspectCrakEsMonstro"
                        android:src="@drawable/suspect_crak_and_monstro_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivSuspectBellatrix"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectSuspect(1)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivSuspectUmbridge"
                        android:src="@drawable/suspect_dolores_umbridge_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivSuspectCrakEsMonstro"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectSuspect(2)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivSuspectDraco"
                        android:src="@drawable/suspect_draco_malfoy_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivSuspectUmbridge"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectSuspect(3)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivSuspectLucius"
                        android:src="@drawable/suspect_lucius_malfoy_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivSuspectDraco"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectSuspect(4)}"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/ivSuspectFeregfark"
                        android:src="@drawable/suspect_peter_pettigrew_bw"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toEndOf="@id/ivSuspectLucius"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{()->dialogViewModel.selectSuspect(5)}"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/btnValidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="@{()->dialogViewModel.finalize()}"
                android:text="@string/incrimination"
                app:layout_constraintTop_toBottomOf="@id/svSuspect"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/svSuspect"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{()->dialogViewModel.skip()}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>