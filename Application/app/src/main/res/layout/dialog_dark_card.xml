<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="darkCardDialogViewModel"
            type="neptun.jxy1vz.cluedo.ui.dice.card_dialog.dark_mark.DarkCardViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivDarkCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:src="@drawable/sotet_pakli_hatlap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.945"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/helper_cards_against_this_dark_card"
                app:layout_constraintStart_toEndOf="@+id/ivDarkCard"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toEndOf="@id/ivDarkCard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivHelperAgainstDarkCard"
                android:id="@+id/helperSpinners">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutSpinners">

                    <TextView
                        android:id="@+id/tvLabelHelperTools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/helper_cards_tools"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvLabelHelperSpells"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/helper_cards_spells"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/spinnerTools" />

                    <TextView
                        android:id="@+id/tvLabelHelperAllys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/helper_cards_allys"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/spinnerSpells" />

                    <Spinner
                        android:id="@+id/spinnerTools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="@+id/tvLabelHelperTools"
                        app:layout_constraintTop_toBottomOf="@id/tvLabelHelperTools" />

                    <Spinner
                        android:id="@+id/spinnerSpells"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="@+id/tvLabelHelperSpells"
                        app:layout_constraintTop_toBottomOf="@id/tvLabelHelperSpells" />

                    <Spinner
                        android:id="@+id/spinnerAllys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="@+id/tvLabelHelperAllys"
                        app:layout_constraintTop_toBottomOf="@id/tvLabelHelperAllys" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/ivHelperAgainstDarkCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:src="@drawable/mento_hatlap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.945"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>